
<%= simple_form_for @recipe, html: { class: 'form-horizontal' }  do |f| %>
  <%= f.input :title, label: 'Título' %>
  <%= f.input :kitchen, label: 'Cozinhas' %>
  <%= f.input :food_type, label: 'Tipo de comida' %>
  <%= f.input :serving, label: 'Porções' %>
  <%= f.input :time, label: 'Tempo de preparo (minutos)' %>
  <%= f.input :difficulty, label: 'Nível de Dificuldade' %>
  <%= f.input :ingredients, label: 'Ingredientes' %>  
  <%= f.input :directions, label: 'Passo a passo' %>
  <%= f.button :submit, 'Enviar Receita' %> 
<% end %>
